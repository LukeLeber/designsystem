{% if level in 1..6 %}
  {% set attributes = create_attribute(attributes|default({})) %}
  {% set classes = [
    'llds-heading',
    size in ['xsmall', 'small', 'medium', 'large', 'xlarge'] ? 'llds-heading--' ~ size,
  ] %}

  <h{{ level }}{{ attributes.addClass(classes) }}>
    {{ content }}
  </h{{ level }}>
{% endif %}