{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'llds-page',
  aside ? 'llds-page--with-aside',
] %}

<div{{ attributes.addClass(classes) }}>
  {% include '@llds/llds-header/header.twig' with {
    attributes: {
      class: 'llds-page__header',
    },
    content: header
  } only %}
  {% if aside %}
    <div class="llds-page__main-content">
      {% include '@llds/llds-main/main.twig' with {
        attributes: {
          class: 'llds-page__main',
        },
        content: main,
      } only %}
      {% include '@llds/llds-aside/aside.twig' with {
        attributes: {
          class: 'llds-page__aside',
        },
        content: aside,
      } only %}
    </div>
  {% else %}
    {% include '@llds/llds-main/main.twig' with {
      attributes: {
        class: 'llds-page__main',
      },
      content: main,
    } only %}
  {% endif %}
  {% include '@llds/llds-footer/footer.twig' with {
    attributes: {
      class: 'llds-page__footer',
    },
    content: footer,
  } only %}
</div>
