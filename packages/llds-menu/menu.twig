{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'llds-menu',
  collapsible ? 'llds-menu--collapsible',
] %}

<nav{{ attributes.addClass(classes) }}>
  {% if collapsible %}
    <button class="llds-menu__toggle" aria-expanded="false">
      <span class="llds-menu__toggle-label">Toggle navigation menu</span>
      <div class="llds-menu__toggle-bars">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </button>
  {% endif %}
  <div class="llds-menu__list">
    {{ content }}
  </div>
</nav>