{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'llds-layout',
  padding in ['xsmall', 'small', 'normal', 'large', 'xlarge'] ? 'llds-layout--padding-' ~ padding,
] %}
<div{{ attributes.addClass(classes) }}>
  {% set content_attributes = create_attribute(content_attributes|default({})) %}
  {% set content_classes = [
    'llds-layout__content',
    width in ['xnarrow', 'narrow', 'normal', 'wide', 'xwide'] ? 'llds-layout__content--width-' ~ width,
  ] %}
  <div{{ content_attributes.addClass(content_classes) }}>
    {{ content }}
  </div>
</div>
