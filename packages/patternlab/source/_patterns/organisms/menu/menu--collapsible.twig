{% set links = ['Home', 'About', 'Services', 'Testimonials'] %}
{% set list_items %}
  {% for link in links %}
    {% set text %}
      {% include '@llds/llds-text/text.twig' with {
        content: link,
        size: 'large',
      } only %}
    {% endset %}
    {% set link %}
      {% include '@llds/llds-link/link.twig' with {
        attributes: {
          href: '#',
        },
        content: text,
        expand_to_fit: true,
      } only %}
    {% endset %}
    {% include '@llds/llds-list-item/list-item.twig' with {
      content: link,
    } only %}
  {% endfor %}
{% endset %}

{% set list %}
  {% include '@llds/llds-list/list.twig' with {
    content: list_items,
    orientation: 'vertical',
  } only %}
{% endset %}

{% include '@llds/llds-menu/menu.twig' with {
  collapsible: true,
  content: list,
} only %}