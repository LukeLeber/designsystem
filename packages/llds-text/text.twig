{% set attributes = attribtes | default(create_attribute([])) %}

{% set attributes = attributes.addClass([
  'llds-text',
  size in ['small', 'normal', 'large'] ? 'llds-text--font-size-' ~ size,
  weight in ['normal', 'semibold', 'bold'] ? 'llds-text--weight-' ~ weight,
  density in ['loose', 'normal', 'tight'] ? 'llds-text--density-' ~ density
]) %}
<span{{ attributes }}>{{ content }}</span>