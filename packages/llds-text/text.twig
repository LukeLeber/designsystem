{% set attributes = attribtes | default(create_attribute([])) %}

{% set attributes = attributes.addClass([
  'text',
  weight in ['normal', 'semibold', 'bold'] ? 'text--weight-' ~ weight,
  density in ['loose', 'normal', 'tight'] ? 'text--density-' ~ density
]) %}
<span{{ attributes }}>{{ content }}</span>